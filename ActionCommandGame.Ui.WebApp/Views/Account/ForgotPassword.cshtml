@model ActionCommandGame.Api.Authentication.Model.UserRegistrationRequest
@{
    ViewData["Title"] = "Forgot Password";
    ViewData["submit_Button"] = "Reset Password";
}
<div asp-validation-summary="ModelOnly"></div>
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card card-small">
            <div class="card-header">
                <h3>Reset Password</h3>
            </div>
            <div class="card-body Accountfitter">
                <form method="post">
                    <div class="input-group login-margin">
                        <div class="input-group-prepend">
                            <label asp-for="Email">
                            <span class="input-group-text"><i class="fas fa-user"></i></span></label>
                        </div>
                        <label></label>
                        <input asp-for="Email" placeholder="user name" class="form-control">
                        <span asp-validation-for="Email"></span>
						
                    </div>
                    <div class="input-group login-margin">
                        <div class="input-group-prepend">
                            <label asp-for="Password">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </label>
                        </div>
                        <input asp-for="Password" placeholder="password" type="password" value="" class="form-control">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="input-group login-margin">
                        <div class="input-group-prepend">
                            <label asp-for="ConfirmPassword">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </label>
                        </div>
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" value="" class="form-control">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    
                    <div class="login-margin">
                        <input type="submit" value=@ViewData["submit_Button"] class="btn float-end login_btn">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Already have an account?<a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in</a>
                </div>
                
            </div>
        </div>
    </div>
</div>


