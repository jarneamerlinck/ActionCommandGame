@model SignInModel
@{
    ViewData["Title"] = "LoginPage";
    ViewData["submit_Button"] = "Login";
}
<div asp-validation-summary="ModelOnly"></div>
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Sign In</h3>
            </div>
            <div class="card-body Accountfitter">
                <form method="post">
                    <div class="input-group login-margin">
                        <div class="input-group-prepend">
                            <label asp-for="Username">
                            <span class="input-group-text"><i class="fas fa-user"></i></span></label>
                        </div>
                        <label></label>
                        <input asp-for="Username" placeholder="user name" class="form-control">
                        <span asp-validation-for="Username"></span>
						
                    </div>
                    <div class="input-group login-margin">
                        <div class="input-group-prepend">
                            <label asp-for="Password">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </label>
                        </div>
                        <input asp-for="Password" placeholder="password" type="password" value="" class="form-control">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="row align-items-center remember">
                        <input type="checkbox">Remember Me
                    </div>
                    <div class="login-margin">
                        <input type="submit" value="@ViewData["submit_Button"]" class="btn float-end login_btn">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account?<a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a asp-action="ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl">Forgot your password?</a>
                </div>
            </div>
        </div>
    </div>
</div>
