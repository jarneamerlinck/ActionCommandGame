@model ShopItem

<div class="card">
    <div class="card-header" id="heading_1">
        <h5 class="mb-0">
            <button class="btn collapsed redTextWithHover">
                @Model.Name
            </button>
        </h5>
    </div>

    <div class="card-body">
        <ul class="yellowText">
            @if (@Model.Description != null)
            {
                <li>@Model.Description</li>
            }
            @if (@Model.Price > 0)
            {
                <li>Price: @Model.Price</li>
            }
            @if (@Model.Attack > 0)
            {
                <li>Attack: @Model.Attack</li>
            }
            @if (@Model.Defense > 0)
            {
                <li>Defense: @Model.Defense</li>
            }
            @if (@Model.Fuel > 0)
            {
                <li>Fuel: @Model.Fuel</li>
            }
        </ul>
        <form method="post">
            <button type="submit" class="btn buyBtn" asp-action="Index" asp-route-id="@Model.Id">Buy</button>
        </form>
    </div>
       
</div>
