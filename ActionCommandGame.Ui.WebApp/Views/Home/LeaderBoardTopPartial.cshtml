@model Player


<div class="col-sm-4">
    <div class="leaderboard-card">
        <div class="leaderboard-card__top">
            <h3 class="text-center">@Model.Cash €</h3>
        </div>
        <div class="leaderboard-card__body">
            <div class="text-center">
                <img src="@Model.ImageLocation" class="circle-img mb-2" alt="User Img">
                <h5 class="mb-0">@Model.Name</h5>
                <hr>
            </div>
        </div>
    </div>
</div>